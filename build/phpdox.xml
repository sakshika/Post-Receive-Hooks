<?xml version="1.0" encoding="utf-8" ?>
<phpdox xmlns="http://phpdox.net/config">
 <project name="ALM Task Manager" source="app" workdir="build/phpdox">
   <collector publiconly="false">
      <include mask="*.php" />
      <exclude mask="*autoload.php" />
   </collector>

  <generator output=".">
     <enrich base="logs">
      <source type="build" />
      <source type="git" />
      <source type="phploc" />
      <source type="checkstyle" />
      <source type="pmd" />
     </enrich>

   <build engine="html" enabled="true" output="build/api/">
       <file extension="html" />
          </build>
            </generator>
             </project>
             </phpdox>
